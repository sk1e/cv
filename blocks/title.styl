@require "../mixins/circular-background.styl"

.title
  display flex
  align-items center
  
  &__icon-box    
    display flex
    flex-direction column
    justify-content center 
    circular-background(115px, 111px, 5px, 1px)
    

  &__text
    display flex    
    align-items center
    height 70px
    color cv-theme-color
    font-size 60px
    text-transform uppercase
    margin 0 20px


  &__line
    flex 1    
    background-color mariner
    height 8px
    width 100%
    
   